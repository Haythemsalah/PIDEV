{% extends 'base.html.twig' %}
{% block title%} Liste des Produits {% endblock %}

{% block body %}

    <table id="produits" class="table table-striped">
        <thead>
        <tr>

            <td>Reference</td>
            <td>Libelle</td>
            <td>Nom</td>
            <td>Nombre</td>
            <td>Prix</td>
            <td>Marque</td>
            <td>Reduction</td>
            <td>Date</td>
            <td>NomCategorie</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        {% for i in p %}
            <tr>


                <td>{{ i.id }}</td>
                <td>{{ i.libelle }}</td>
                <td>{{ i.nomP }}</td>
                <td>{{ i.nombre }}</td>
                <td>{{ i.prix }}</td>
                <td>{{ i.marque }}</td>
                <td>{{ i.reduction }}</td>
                <td>{{ i.dateP|date("d/m/Y")  }}</td>
                <td>{{ i.categorie.nomC }}</td>
                <td>
                    <form action="{{ path('ajoutP',{'id':i.id}) }}">
                        <button>Ajouter</button></form>

                </td>

                <td>
                    <form action="{{ path('suppP',{'id':i.id}) }}">
                        <button>Supprimer</button></form>

                </td>
                </td>
                <td>
                    <form action="{{ path('modifP',{'id':i.id}) }}">
                        <button>Modifier</button></form>

                </td>




            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}